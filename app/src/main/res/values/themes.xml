<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BollyHood" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BollyHood" parent="Base.Theme.BollyHood" />

    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/holo_red_light</item>
    </style>

    <style name="NavigationFont" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/neueeinstellung_medium</item>
    </style>

    <style name="roundedCornerBanner" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">15dp</item>
        <item name="cornerSizeTopRight">15dp</item>
        <item name="cornerSizeBottomLeft">30dp</item>
        <item name="cornerSizeBottomRight">15dp</item>
    </style>

    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">10dp</item>
        <item name="cornerSizeBottomRight">10dp</item>
    </style>

    <style name="roundedCornersProfile" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">7dp</item>
        <item name="cornerSizeTopRight">7dp</item>
        <item name="cornerSizeBottomLeft">7dp</item>
        <item name="cornerSizeBottomRight">7dp</item>
    </style>

    <style name="TextInputLayoutHintText" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10dp</item>
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textColor">#757575</item>
    </style>

    <style name="style_sec_sec" parent="">
        <item name="android:fontFamily">@font/urbanist_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:color">@color/black</item>
        <item name="android:inputType">text</item>
        <item name="android:textColorHint">#757575</item>
    </style>


    <style name="BottomSheetDialogTheme">
        <item name="android:windowEnterAnimation">@anim/slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="CustomTimePicker" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#EF4F6A</item>
        <item name="colorAccent">#EF4F6A</item>
    </style>


</resources>