<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/llmain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp"
        android:elevation="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/user_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/llimageview"
                android:layout_width="@dimen/_45sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_height="@dimen/_45sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImage"
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="@dimen/_45sdp"
                    android:src="@drawable/rectangle_1092"
                    android:background="@drawable/circle_transparent"
                    />

                <ImageView
                    android:id="@+id/ivStatus"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/llName"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toStartOf="@+id/tvtime"
                    >

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvcasting_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_semibold"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Madhur Sharma"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />


                </RelativeLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvtime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_9sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="2 hour ago"
                    android:textColor="#80797C7B"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="TextSizeCheck" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvapply_count"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_below="@id/tvtime"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/red_dart"
                    android:gravity="center"
                    android:padding="@dimen/_1sdp"
                    android:text="511"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_8sdp"
                    android:visibility="visible"
                    tools:ignore="TextSizeCheck" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</layout>
