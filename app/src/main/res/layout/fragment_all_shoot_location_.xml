<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProductionHouseFragment">

    <data>

        <variable
            name="featuredLocation"
            type="com.app.bollyhood.adapter.FeaturedLocationsAdapter" />

        <variable
            name="locationListAdapter"
            type="com.app.bollyhood.adapter.LocationListAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F7FC">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_125sdp"
            android:background="@drawable/shoot_location_background"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:id="@+id/rrMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginRight="@dimen/_15sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">


                <RelativeLayout
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:background="@drawable/white_border"
                        android:paddingTop="@dimen/_4sdp"
                        android:paddingEnd="@dimen/_7sdp"
                        android:paddingStart="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_7sdp"
                        android:src="@drawable/icon_back" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/ivBack"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_toStartOf="@+id/cvProfile">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvusername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/urbanist_bold"
                        android:text="Hi Akshay,"
                        android:textColor="@color/white"
                        android:textSize="20sp" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvHeader_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvusername"
                        android:layout_marginTop="-2dp"
                        android:fontFamily="@font/urbanist_regular"
                        android:text="Explore 500+ Actors From Mumbai"
                        android:textColor="@color/white"
                        android:textSize="10sp" />
                </RelativeLayout>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/cvProfile"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_margin="@dimen/_1sdp"
                    android:src="@drawable/ic_profile" />

            </RelativeLayout>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:src="@drawable/ellipse_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="150dp"
                android:layout_height="130dp"
                android:src="@drawable/ellipse_5"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edsearch"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_25sdp"
            android:background="@drawable/rectangle_plan3"
            android:drawableStart="@drawable/baseline_search_24"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/poppins_medium"
            android:hint="@string/search_shoo"
            android:maxLines="1"
            android:paddingStart="@dimen/_10sdp"
            android:layout_marginTop="-52dp"
            android:paddingEnd="@dimen/_10sdp"
            android:singleLine="true"
            android:textColor="#585858"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/constraintLayout4" />

        <RelativeLayout
            android:id="@+id/relativeLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            app:layout_constraintTop_toBottomOf="@+id/edsearch">

           <com.google.android.material.textview.MaterialTextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/featured_lo"
               android:textColor="@color/black"
               android:fontFamily="@font/urbanist_semibold"
               android:layout_marginStart="@dimen/_10sdp"
               android:textSize="14sp"
               />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_view_all"
                android:textColor="#FE885B"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/urbanist_semibold"
                android:textSize="14sp"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llParentView">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/left_line" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:fontFamily="@font/urbanist_semibold"
                android:text="@string/locations_a"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/right_line" />

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/llParentView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout7">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvfeaturedlocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:adapter="@{featuredLocation}"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvfeaturedata"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:text="No Featured Location found"
                android:textSize="@dimen/_12sdp"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:visibility="gone"
                android:textColor="@color/black"
                android:fontFamily="@font/urbanist_semibold"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ss"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:weightSum="4"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_weight="1"
                android:text="Lonavala"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/black_gradient_bg"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Karjat"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/black_gradient_bg"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Alibaug"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/black_gradient_bg"/>

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_22sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_weight="1"
                android:text="Madh"
                android:textColor="@color/white"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:textSize="13sp"
                android:background="@drawable/black_gradient_bg"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/relativeLayout9"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@+id/ss">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="30 Listings Found"
                android:textColor="@color/black"
                android:fontFamily="@font/urbanist_semibold"
                android:layout_marginStart="@dimen/_10sdp"
                android:textSize="14sp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All Relevance"
                android:textColor="#FE885B"
                android:drawableRight="@drawable/ccp_ic_arrow_drop_down"
                android:drawableTint="#FE885B"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/urbanist_semibold"
                android:textSize="14sp"/>
        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvlocation_image"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:adapter="@{locationListAdapter}"
            app:layout_constraintBottom_toTopOf="@+id/tvload_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout9" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_nodata"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="No data found"
            android:textSize="@dimen/_12sdp"
            android:gravity="center"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:visibility="gone"
            android:textColor="@color/black"
            android:fontFamily="@font/urbanist_semibold"
            app:layout_constraintBottom_toTopOf="@+id/tvload_more"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/relativeLayout9"/>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvload_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:visibility="gone"
            android:layout_marginBottom="15dp"
            android:background="@drawable/rectangle_app_background"
            android:fontFamily="@font/inter_semibold"
            android:gravity="center"
            android:text="Load More Production Houses"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:ignore="TextSizeCheck"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ProgressBar
            android:id="@+id/pbLoadData"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:theme="@style/CircularProgress"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>