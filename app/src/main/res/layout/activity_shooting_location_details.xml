<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="adapter"
            type="com.app.bollyhood.adapter.ImageViewPagerAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="SpeakableTextPresentCheck">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/shootLoccationImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:scaleType="fitXY"
                    android:src="@drawable/singer"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/llBack"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:src="@drawable/white_back_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/llBookmark"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/round_pink_color"
                    android:backgroundTint="@color/white"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginEnd="@dimen/_7sdp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iconHeart"
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/white_heart"
                        />

                </RelativeLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:background="@drawable/rectangle_lightcornerwhite"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/shootLoccationImage">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvLocationName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/urbanist_semibold"
                        android:maxLines="2"
                        android:text="Elements Villa \nMadh"
                        android:textColor="@color/black"
                        android:textSize="34sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/location_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableStart="@drawable/map_point"
                        android:drawablePadding="@dimen/_2sdp"
                        android:drawableTint="@color/black"
                        android:fontFamily="@font/urbanist_regular"
                        android:text="Madh , Mumbai"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLocationName" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvrating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginStart="@dimen/_13sdp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:fontFamily="@font/urbanist_regular"
                        android:text="⭐️ 4.9 (1.2K review)"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/location_city" />

                    <LinearLayout
                        android:id="@+id/llprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_14sdp"
                        android:layout_marginEnd="15dp"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvLocationName">

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvRupes"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_medium"
                            android:text="25,000/"
                            android:textColor="@color/black"
                            android:textSize="23sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/materialTextView" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvShift"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/inter_regular"
                            android:text="12hr"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/materialTextView" />
                    </LinearLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height=".5sp"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="20sp"
                        android:background="#ECEBEB"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llprice" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:fontFamily="@font/urbanist_regular"
                        android:inputType="textMultiLine"
                        android:text="The best modern bungalow artistic modern elevation features with Ground plus 1 storied, 2 Bedrooms, Hall, Kitchen &amp; Family Room Bungalow with Swimming pool and....Read More"
                        android:textColor="#757575"
                        android:textSize="16sp"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txwhat_we_offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="What we offer"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tvDescription" />

                    <LinearLayout
                        android:id="@+id/lloffer"
                        android:layout_width="match_parent"
                        android:layout_height="95dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:gravity="center_vertical"
                        android:weightSum="4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txwhat_we_offer">

                        <RelativeLayout
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:elevation="@dimen/_10sdp"
                            android:background="@drawable/whitebackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/image1"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/parking_icon"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvParking"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 Parkings"
                                android:textSize="10sp"
                                android:textColor="#666667"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/inter_regular"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/image1"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/llcareTaker"
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:elevation="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@drawable/whitebackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/image2"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerHorizontal="true"
                                android:padding="@dimen/_2sdp"
                                android:scaleType="fitXY"
                                android:src="@drawable/person_icon"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Care Taker"
                                android:textSize="10sp"
                                android:textColor="#666667"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/inter_regular"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/image2"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/lldeposit"
                            android:layout_width="@dimen/_55sdp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:elevation="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@drawable/whitebackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/image3"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/deposit_icon"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvDeposit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Deposit"
                                android:textSize="10sp"
                                android:textColor="#666667"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/inter_regular"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/image3"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="70sp"
                            android:layout_height="85dp"
                            android:layout_weight="1"
                            android:elevation="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@drawable/whitebackground"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/image4"
                                android:layout_width="@dimen/_20sdp"
                                android:layout_height="@dimen/_20sdp"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/furniture_icon"/>

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tvAcCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6 Ac"
                                android:textSize="10sp"
                                android:textColor="#666667"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:fontFamily="@font/inter_regular"
                                android:layout_centerHorizontal="true"
                                android:layout_below="@+id/image4"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/linearLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/lloffer"
                        >

                        <View
                            android:layout_width="100dp"
                            android:layout_height=".5dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/gray" />

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:fontFamily="@font/urbanist_semibold"
                            android:text="Image Gallery"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <View
                            android:layout_width="100dp"
                            android:layout_height=".5dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/gray" />

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/llrvimageView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginEnd="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

                        <View
                            android:id="@+id/leftSide"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:background="@drawable/left_side_arrow"/>

                        <androidx.viewpager2.widget.ViewPager2
                            android:id="@+id/rvImages"
                            android:layout_width="match_parent"
                            android:layout_height="160dp"
                            android:adapter="@{adapter}"
                            android:layout_gravity="center_horizontal"/>

                        <View
                            android:id="@+id/rightSide"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/_10sdp"
                            android:layout_centerVertical="true"
                            android:background="@drawable/right_side_arrow"/>

                    </RelativeLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/txHostedBy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Hosted by"
                        android:textColor="@color/black"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llrvimageView" />

                    <RelativeLayout
                        android:id="@+id/llhosting_profile"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/txHostedBy">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tvManagerProfile"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:elevation="@dimen/_5sdp"
                            app:cardBackgroundColor="@color/grey"
                            app:cardCornerRadius="10dp">

                            <ImageView
                                android:id="@+id/managerImage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="fitXY"
                                android:src="@drawable/singer" />

                        </androidx.cardview.widget.CardView>

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvmanageerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_6sdp"
                            android:layout_toRightOf="@+id/tvManagerProfile"
                            android:fontFamily="@font/inter_semibold"
                            android:text="Bablo Yadav"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvRatingManager"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/tvmanageerName"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:layout_toRightOf="@+id/tvManagerProfile"
                            android:fontFamily="@font/inter_regular"
                            android:text="⭐️ 4.9 (1.2K review)"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <RelativeLayout
                            android:id="@+id/tvMessage"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:background="@drawable/rectangle_app_background"
                            android:gravity="center">

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:backgroundTint="@color/white"
                                android:background="@drawable/ic_chat" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/contactBtn"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/rectangle_apply_button"
                        android:fontFamily="@font/inter_semibold"
                        android:gravity="center"
                        android:text="Contact Now"
                        android:textColor="@color/white"
                        android:textSize="22sp"
                        android:layout_marginStart="@dimen/_20sdp"
                        android:layout_marginEnd="@dimen/_20sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/llhosting_profile" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.core.widget.NestedScrollView>

        <ProgressBar
            android:id="@+id/pbLoadData"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:theme="@style/CircularProgress"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
