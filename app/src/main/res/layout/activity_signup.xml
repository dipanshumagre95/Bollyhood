<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/app_background_gradient"
        >


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/rectangle_topcorner_down"
            android:layout_alignParentBottom="true">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/view"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_2sdp"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:background="@color/colorgrey"/>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvcreateaccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_below="@id/view"
                android:fontFamily="@font/poppins_bold"
                android:text="Create your account"
                android:layout_centerHorizontal="true"
                android:textColor="@color/black"
                android:textSize="22dp"
                 />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txsecond"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/tvcreateaccount"
                android:fontFamily="@font/poppins_regular"
                android:text="Create account for bollyhood.app"
                android:textSize="@dimen/_12sdp"
                 />


            <RelativeLayout
                android:id="@+id/llcategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/txsecond">

                <LinearLayout
                    android:id="@+id/lyindividual"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:background="@drawable/rectangle_black_button"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >


                    <ImageView
                        android:id="@+id/redbtn_individual"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/red_dart"
                        android:visibility="visible" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvindividual"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="@string/str_individual"
                        android:textColor="@color/white"
                        android:textSize="16sp" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lycompany"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/border_gray"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_toRightOf="@+id/lyindividual">


                    <ImageView
                        android:id="@+id/redbtn_company"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/_5sdp"
                        android:src="@drawable/red_dart"
                        android:visibility="gone" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvcompany"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center"
                        android:text="Company"
                        android:textColor="@color/black"
                        android:textSize="16dp" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/llacSelectcatagory"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/llcategory"
                android:layout_centerHorizontal="true"
                android:background="@drawable/rectangle_app_background">

                <ImageView
                    android:id="@id/image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24" />


                <AutoCompleteTextView
                    android:id="@+id/acSelectToday"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/image"
                    android:background="@android:color/transparent"
                    android:clickable="false"
                    android:dropDownAnchor="@id/acSelectToday"
                    android:focusable="false"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_20sdp"
                    android:text="@string/str_category"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_14sdp"
                    android:visibility="visible" />

            </RelativeLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/txfirstname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="First Name"
                android:layout_below="@+id/llacSelectcatagory"
                android:textColor="@color/black"
                android:textSize="16dp"
                 />

            <LinearLayout
                android:id="@+id/llfirstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/txfirstname"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_grey"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/identification_card" />


                <EditText
                    android:id="@+id/edtName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/rectangle_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="First Name"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@id/rrProfile" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvlastname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Last Name"
                android:layout_below="@+id/llfirstname"
                android:textColor="@color/black"
                android:textSize="16dp"
                 />

            <LinearLayout
                android:id="@+id/lllastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvlastname"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_grey"
                android:orientation="horizontal"
                >


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/identification_card" />


                <EditText
                    android:id="@+id/edtLastName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:background="@drawable/rectangle_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Last Name"
                    android:inputType="textPersonName"
                    android:maxLength="50"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintTop_toBottomOf="@id/rrProfile" />

            </LinearLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvpassward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Password"
                android:layout_below="@+id/lllastname"
                android:textColor="@color/black"
                android:textSize="16dp"
                 />

            <RelativeLayout
                android:id="@+id/llpassward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/tvpassward"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rectangle_grey"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/passward_lock"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/lock_icon" />


                <EditText
                    android:id="@+id/edtPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/passward_lock"
                    android:background="@drawable/rectangle_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="@string/str_password"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/passwordshow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/pass_eye_icon" />

            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvcfmpassward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Confirm Password"
                android:layout_below="@+id/llpassward"
                android:textColor="@color/black"
                android:textSize="16dp"
                />

            <RelativeLayout
                android:id="@+id/llcfmpassward"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_below="@+id/tvcfmpassward"
                android:background="@drawable/rectangle_grey"
                android:orientation="horizontal"
                >


                <ImageView
                    android:id="@+id/passward_lock1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/lock_icon" />


                <EditText
                    android:id="@+id/edtConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_toRightOf="@+id/passward_lock1"
                    android:background="@drawable/rectangle_grey"
                    android:fontFamily="@font/poppins_regular"
                    android:hint="Confirm Password"
                    android:inputType="textPassword"
                    android:maxLength="15"
                    android:maxLines="1"
                    android:paddingStart="@dimen/_10sdp"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textColorHint="@color/colorgrey"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:id="@+id/cnfmpassshow"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/pass_eye_icon" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/llteamNcondition"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:layout_below="@+id/llcfmpassward">

                <CheckBox
                    android:id="@+id/cbteamNcondition"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvteam_condition"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:singleLine="true"
                    android:layout_toRightOf="@+id/cbteamNcondition"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center_vertical"
                    android:textSize="11dp" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/rectangle_app_background"
                android:layout_below="@+id/llteamNcondition">

                <TextView
                    android:id="@+id/tvSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_bold"
                    android:gravity="center"
                    android:text="SIGN UP"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13sdp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:src="@drawable/login" />

            </RelativeLayout>

        </RelativeLayout>



        <ProgressBar
            android:layout_centerInParent="true"
            android:id="@+id/pbLoadData"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_gravity="center"
            android:theme="@style/CircularProgress"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </RelativeLayout>

</layout>
