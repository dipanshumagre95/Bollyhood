<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="@dimen/_87sdp"
        android:layout_height="@dimen/_120sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:layout_marginStart="@dimen/_5sdp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="@dimen/_10sdp">

            <RelativeLayout
                android:id="@+id/mainItem"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_85sdp"
                    android:adjustViewBounds="true"
                    app:shapeAppearance="@style/roundedCornersImageView"
                    android:src="@drawable/ic_profile"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitXY"
                     />

                <LinearLayout
                    android:id="@+id/llname"
                    android:layout_below="@+id/ivImage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    >

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txActorsName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/urbanist_semibold"
                    android:text="Akshay Sharma"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9sdp"
                    />

                <ImageView
                    android:id="@+id/flagTag"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_toRightOf="@+id/txActorsName"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:src="@drawable/right_icon"
                    android:layout_below="@+id/ivImage"
                    />

                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/txrole"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Actor / Writer"
                    android:layout_below="@+id/llname"
                    android:textSize="@dimen/_6sdp"
                    android:fontFamily="@font/urbanist_regular"
                    android:textColor="@color/black"
                    android:layout_centerHorizontal="true"/>


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View Profile"
                    android:textSize="@dimen/_5sdp"
                    android:textColor="@color/white"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:fontFamily="@font/urbanist_bold"
                    android:layout_below="@+id/txrole"
                    android:layout_centerInParent="true"
                    android:background="@drawable/rectangle_app_background"/>


            </RelativeLayout>


        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>