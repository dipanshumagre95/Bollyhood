<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:id="@+id/llmain"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55sdp"
        android:elevation="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_3sdp"
        android:layout_marginEnd="@dimen/_3sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:background="@drawable/whitebackground">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:id="@+id/llimageview"
                android:layout_width="@dimen/_45sdp"
                android:layout_centerHorizontal="true"
                android:layout_height="@dimen/_45sdp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImage"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:src="@drawable/rectangle_1092"
                    android:background="@drawable/circle_transparent"
                    />

                <ImageView
                    android:id="@+id/ivStatus"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_5sdp">

                <RelativeLayout
                    android:id="@+id/llName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/three_dots"
                    >

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvcasting_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:layout_alignParentStart="true"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Policeman Role"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <ImageView
                        android:id="@+id/ivBookMark"
                        android:layout_width="@dimen/_12sdp"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_toRightOf="@+id/tvcasting_name"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_centerVertical="true"
                        android:visibility="gone"
                        android:src="@drawable/right_icon"
                        />


                </RelativeLayout>

                <ImageView
                    android:id="@+id/three_dots"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:paddingStart="@dimen/_5sdp"
                    android:paddingEnd="@dimen/_5sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:focusable="true"
                    android:src="@drawable/black_dots"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_alignParentEnd="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@+id/three_dots"
                    android:layout_alignParentStart="true"
                    android:orientation="horizontal"
                    android:layout_marginTop="-5dp"
                    android:layout_below="@+id/llName">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvcasting_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:ellipsize="end"
                        android:fontFamily="@font/poppins_regular"
                        android:maxLines="1"
                        android:singleLine="true"
                        android:text="Casting Call is Active"
                        android:textColor="#00ED6D"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="TextSizeCheck"/>

                    <ImageView
                        android:id="@+id/ivstatus_icon"
                        android:layout_width="@dimen/_8sdp"
                        android:layout_height="@dimen/_8sdp"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:layout_marginStart="@dimen/_3sdp"
                        android:src="@drawable/ellipse_385"/>
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvapply_count"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_alignParentEnd="true"
                    android:textSize="@dimen/_8sdp"
                    android:layout_below="@id/three_dots"
                    android:gravity="center"
                    android:visibility="visible"
                    android:padding="@dimen/_1sdp"
                    android:text="100"
                    android:background="@drawable/red_dart"
                    android:textColor="@color/white"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    tools:ignore="TextSizeCheck"
                    />

            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>
</layout>
