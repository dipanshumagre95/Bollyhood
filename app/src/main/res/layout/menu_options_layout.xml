<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_apply_button"
    android:backgroundTint="#EAEAEA"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:id="@+id/menu_pin"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:id="@+id/tvPin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pin"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/office_push_pin"
            android:layout_alignParentEnd="true"
            android:contentDescription="Pin" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray"
        />

    <RelativeLayout
        android:id="@+id/menu_edit"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/editing"
            android:layout_alignParentEnd="true"
            android:contentDescription="Pin" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray"
        />

    <RelativeLayout
        android:id="@+id/menu_hide_alerts"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide_alerts"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/hide_alert_icon"
            android:layout_alignParentEnd="true"
            android:contentDescription="Pin" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.25dp"
        android:background="@color/gray"
        />

    <RelativeLayout
        android:id="@+id/menu_delete"
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/delete_post"
            android:textSize="14sp"
            android:textColor="@color/colorred"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginStart="8dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/delete_icon_gradient"
            android:layout_alignParentEnd="true"
            android:contentDescription="Pin" />
    </RelativeLayout>
</LinearLayout>
