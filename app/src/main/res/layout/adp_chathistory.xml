<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.app.bollyhood.model.ChatModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/llSender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:id="@+id/senderchatBackground"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/_80sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_history_background">


                <androidx.cardview.widget.CardView
                    android:id="@+id/llsenderImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivSendImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:contentDescription="@string/app_name"
                        android:scaleType="centerCrop"
                        />

                </androidx.cardview.widget.CardView>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvSender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/neueeinstellung_medium"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:padding="@dimen/_10ssp"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />




            </LinearLayout>



            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvSenderTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_80sdp"
                android:fontFamily="@font/neueeinstellung_regular"
                android:gravity="end"
                android:padding="@dimen/_1ssp"
                android:text=""
                android:layout_marginEnd="@dimen/_10sdp"
                android:textColor="#80797C7B"
                android:textSize="@dimen/_8ssp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/llReceiver"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ivImage"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:fontFamily="@font/urbanist_semibold"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/recevierChatBackground"
                android:layout_marginEnd="@dimen/_80sdp"
                android:background="@drawable/chat_rectangle_grey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/llrecevierImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    app:cardCornerRadius="@dimen/_10sdp"
                    android:layout_margin="@dimen/_1sdp"
                    android:visibility="gone">

                <ImageView
                    android:id="@+id/ivReceiverImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/app_name"
                    android:scaleType="centerCrop" />

                </androidx.cardview.widget.CardView>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvReceiver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/neueeinstellung_medium"
                        android:gravity="center"
                        android:padding="@dimen/_10ssp"
                        android:text=""
                        android:visibility="visible"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <ImageView
                        android:id="@+id/ivdownload"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:visibility="gone"
                        android:src="@drawable/download_round_icon"
                        android:layout_gravity="center"/>

                    <ProgressBar
                        android:id="@+id/pbLoadData"
                        style="?android:attr/progressBarStyleLarge"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:theme="@style/CircularProgress"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </LinearLayout>


            </LinearLayout>


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvReceiverTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_80sdp"
                android:fontFamily="@font/neueeinstellung_regular"
                android:gravity="start"
                android:padding="@dimen/_1ssp"
                android:text=""
                android:textColor="#80797C7B"
                android:textSize="@dimen/_8ssp" />


        </LinearLayout>


    </LinearLayout>
</layout>
