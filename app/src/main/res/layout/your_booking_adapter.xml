<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/itembg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:elevation="@dimen/_8sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_15sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Elements Bunglow"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_toLeftOf="@+id/location"
                android:maxLines="1"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/poppins_semibold"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mumbai"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="@dimen/_12sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15th March 2024"
                android:textSize="14sp"
                android:layout_marginTop="-5dp"
                android:layout_below="@+id/tvname"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/poppins_medium"
                android:textColor="@color/black"/>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:30AM to 9:30PM"
                android:textColor="@color/black"
                android:textSize="12sp"
                android:layout_marginTop="-5dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/poppins_regular"
                android:layout_below="@+id/tvdate"/>


            <RelativeLayout
                android:id="@+id/statusBg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTime"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#ff3535">

                <RelativeLayout
                    android:id="@+id/llheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_10sdp">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/bookingStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pendiing"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="16dp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvTextDetails"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Contect Details"
                        android:fontFamily="@font/poppins_regular"
                        android:layout_marginEnd="@dimen/_2sdp"
                        android:textSize="12sp"
                        android:layout_toStartOf="@+id/llarrow"
                        android:textColor="@color/white"
                        android:layout_centerVertical="true"/>

                    <RelativeLayout
                        android:id="@+id/llarrow"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="18sp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:focusable="true">

                        <View
                            android:id="@+id/downArrow"
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="@dimen/_8sdp"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="@dimen/_5sdp"
                            android:backgroundTint="@color/white"
                            android:background="@drawable/down_arrow_icon"
                            />

                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/managerDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/llheader"
                    android:layout_marginTop="-5dp"
                    android:visibility="gone"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_5sdp">

                    <RelativeLayout
                        android:id="@+id/llcvprofile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/category_circle_border"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/ivImage"
                            android:layout_width="@dimen/_45sdp"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_centerVertical="true"
                            android:layout_margin="@dimen/_2sdp"
                            android:src="@drawable/ic_profile" />

                    </RelativeLayout>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvManagername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shravan Patil"
                        android:textSize="18sp"
                        android:textColor="@color/white"
                        android:maxLines="1"
                        android:fontFamily="@font/poppins_semibold"
                        android:layout_toRightOf="@+id/llcvprofile"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/llcvprofile"
                        android:layout_below="@+id/tvManagername"
                        android:text="+91 9920050859"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="-5dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/llcvprofile"
                        android:layout_below="@+id/tvPhone"
                        android:text="Shravan.patil@gmail.com"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:layout_marginTop="-3dp"/>

                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</layout>

